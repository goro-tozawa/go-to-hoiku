<div class="items-sell-contents">
  <header class="items-sell-header">
    <%= link_to image_tag('furima-logo-color.png' , size: '185x50'), "/" %>

  </header>
  <div class="items-sell-main">
    <h2 class="items-sell-title">仕事内容の情報を入力</h2>
  <%= form_with(model: @work, local: true) do |f| %>
  
    <%= render 'shared/error_messages', model: f.object %>
    

    <%# 出品画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        出品画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>
  
        <%= f.text_area :job_description, class:"items-text", id:"job-description", placeholder:"仕事の説明（必須 1,000文字まで）（色、素材、重さ、定価、注意点など）例）子どもと一緒に食事をし、掃除をする簡単なお仕事です" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>

    <%# 商品の詳細 %>
     <div class="form-group">
          <label class="form-text">募集人数</label>
                <span class="indispensable">必須</span>
       <p>  <%= f.radio_button :qualification, :male %>
              <%= f.label :qualification, "1人", {value: :male, style: "display: inline-block;"} %></p>
       <p>  <%= f.radio_button :qualification, :female %>
        <%= f.label :qualification, "2人", {value: :female, style: "display: inline-block;"} %></p>  
       <p> <%= f.radio_button :qualification, :female %>
             <%= f.label :qualification, "３人", {value: :female, style: "display: inline-block;"} %></p>
        <p><%= f.radio_button :qualification, :female %>
             <%= f.label :qualification, "4人", {value: :female, style: "display: inline-block;"} %></p>
        <p><%= f.radio_button :qualification, :female %>
             <%= f.label :qualification, "その他", {value: :female, style: "display: inline-block;"} %></p>
    </div>

     <%# recruiting_daysのカレンダーを挿入 %>

     <div class="price-content">
          <div class="price-text">
            <span>仕事時間</span>
            <span class="indispensable">必須</span>
          </div>
          <span class="sell-yen">最大</span>
          <%= f.text_field :recruiting_times, class:"price-input", id:"item-price", placeholder:"例）04:00" %>
          <span class="sell-yen">時間</span>
        </div>

     <div class="price-content">
          <div class="price-text">
            <span>時給</span>
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_field :hourly_wage, class:"price-input", id:"item-price", placeholder:"例）04:00" %>
          <span class="sell-yen">円 時給/時間</span>
        </div>

    <%# 注意書き %>
    <div class="caution">
      <p class="sentence">
        <a href="#">禁止されている出品、</a>
        <a href="#">行為</a>
        を必ずご確認ください。
      </p>
      <p class="sentence">
        またブランド品でシリアルナンバー等がある場合はご記載ください。
        <a href="#">偽ブランドの販売</a>
        は犯罪であり処罰される可能性があります。
      </p>
      <p class="sentence">
        また、出品をもちまして
        <a href="#">加盟店規約</a>
        に同意したことになります。
      </p>
    </div>
    <%# /注意書き %>
    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "出品する", class:"sell-btn" %>
      <%# 出品するにroot_pathを追加 %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>

  <footer class="items-sell-footer">
    <ul class="menu">
      <li><a href="#">プライバシーポリシー</a></li>
      <li><a href="#">フリマ利用規約</a></li>
      <li><a href="#">特定商取引に関する表記</a></li>
    </ul>
    <%= link_to image_tag('furima-logo-color.png' , size: '185x50'), "/" %>
    <p class="inc">
      ©︎Furima,Inc.
    </p>
  </footer>
</div>